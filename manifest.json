{
  "manifest_version": 3,
  "name": "Dev Stack",
  "version": "1.0.1",
  "description": "Developer tools for URL swapping and cache busting to enhance development workflow.",
  "icons": {
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_title": "Dev Stack",
    "default_popup": "popup.html"
  },
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["cache-buster.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["debug-helpers.js"],
      "run_at": "document_end"
    }
  ]
}
